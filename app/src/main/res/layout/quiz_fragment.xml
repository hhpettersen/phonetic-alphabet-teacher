<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quiz.QuizFragment">

    <TextView
        android:layout_margin="@dimen/margin_padding_size_medium"
        android:id="@+id/questionProgressText"
        tools:text="1/5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginBottom="@dimen/margin_padding_size_large"
        android:id="@+id/questionText"
        android:textSize="@dimen/text_size_xxxlarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/scoreText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Letter: A" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_padding_size_medium"
        app:layout_constraintBottom_toTopOf="@+id/firstQuestionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Current score: 2" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/firstQuestionButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/secondQuestionButton"
        app:layout_constraintEnd_toEndOf="@+id/secondQuestionButton"
        app:layout_constraintStart_toStartOf="@+id/secondQuestionButton"
        tools:text="A" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/secondQuestionButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/thirdQuestionButton"
        app:layout_constraintEnd_toEndOf="@+id/thirdQuestionButton"
        app:layout_constraintStart_toStartOf="@+id/thirdQuestionButton"
        tools:text="B" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/thirdQuestionButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/fourthQuestionButton"
        app:layout_constraintEnd_toEndOf="@+id/fourthQuestionButton"
        app:layout_constraintStart_toStartOf="@+id/fourthQuestionButton"
        tools:text="C" />

    <Button
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/margin_padding_size_xxlarge"
        android:id="@+id/fourthQuestionButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="D" />


</androidx.constraintlayout.widget.ConstraintLayout>